

view.panel{
    margin-left: 3vw;
    margin-right: 3vw;
}

view.title, view.name{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 5vh;
    margin-top: 5vh;
}


view.content{
    height: 8vh;
    color: #888;
}

image{
    height: 5vh;
    width: 5vh;
}

view.flex-row{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-left: 2vw;
    margin-right: 2vw;
}
view.flex-row > view{
    flex:1;
    display: flex;
    justify-content: center;
    align-items: center;
}
view.flex-row > view:first-of-type{
    flex:2;
    justify-content: flex-start;
}