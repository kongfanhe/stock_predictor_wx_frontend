
view.search{
    position: absolute;
    width: 80vw;
    left: 10vw;
    height: 15vw;
    border-radius: 10vw;
    display: flex;
    flex-direction: row;
    border: 1px solid #ddd;
    align-items: center;
}

view.lazy{
    top: calc(50vh - 7vw);
}

view.active{
    top: 10vw;
}

view.icon{
    margin-left: 2vw;
    margin-top: 2vw;
    width: 10vw;
    /* background: blue; */
}

view.input{
    width: 50vw;
    margin-right: 10vw;
}

image{
    margin-top: 1vw;
    height: 5vw;
    width: 5vw;
}

input{
    height: 15vw;
}

view.hint{
    position: absolute;
    top: 25vw;
    left: 20vw;
    width: 60vw;
}

view.hint > view{
    margin-top: 3vw;
    padding-bottom: 3vw;
    /* background: red; */
    border-bottom: 1px solid #ddd;
}